{
	"pre_ops":{
		"tasks":{
			"clean":true,
			"bower-install-simple":true,
			"modernizr":true,
			"copy":true
		}
	},
	"js":{
		"tasks":{
			"exec:js":true,
			"browserify:babel":true,
			"newer:jscs":false,
			"newer:eslint":true,
			"newer:uglify":true
		}
	},
	"css":{
		"tasks":{
			"sass":true,
			"newer:sass-convert":true,
			"newer:csslint":true,
			"newer:postcss":true,
			"newer:stripmq":true,
			"newer:cssmin":true
		}
	},
	"html":{
		"tasks":{
			"newer:zetzer":true,
			"wiredep":true,
			"newer:htmlhintplus":{
				"package":"grunt-htmlhint-plus"
			}
		}
	},
	"icons":{
		"tasks":{
			"real_favicon":true,
			"svgmin:icons":false,
			"grunticon:build":false
		}
	},
	"images":{
		"tasks":{
			"newer:imagemin":true,
			"newer:webp":false
		}
	},
	"docs":{
		"devonly":true,
		"tasks":{
			"jsdoc":true,
			"exec:styleguide":false,
			"phantomas":false
		}
	},
	"tests":{
		"tasks":{
			"phantomcss":false,
			"karma":false
		}
	},
	"watchers":["watch:css", 
				"watch:js",
				"watch:html",
				"watch:deps",
				"watch:favicon",
				"watch:svgmin",
				"watch:grunticon"]
}